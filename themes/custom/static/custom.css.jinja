:root {
  font-size: 16px;
  color: black;
  line-height: 1.5rem;
  font-family: "Helvetica Neue", "Calibri", "Segoe UI", "Arial",
    "Hiragino Kaku Gothic ProN", "Yu Gothic", "Meiryo UI", sans-serif;
  --white: #ffffff;
  --black: #000000;
  --primary: #82a0aa;
  --secondary: #b4c6cc;
  --tertiary: #3c5d69;
  --middle-blue: #2b72b3;
  --custom-red: #e31f26;
  --custom-gray1: #567783;
  --custom-gray2: #82a0aa;
  --custom-gray3: #223f4b;
  --custom-blue: #006487;
  --custom-yellow: #dc6914;
  --custom-green: #647d2d;
  --custom-purple: #6e1e4b;
  --primary-color: var(--primary);
  --secondary-color: var(--secondary);
  --tertiary-color: var(--tertiary);
  --accent-color: var(--middle-blue);
}

body {
  margin: 0;
  padding: 0;
  background-color: #ffffff;
  overflow: hidden;
}
h1 {
  font-size: 1.875rem;
  line-height: 2.25rem;
}

h2 {
  color: var(--tertiary-color);
  font-size: 1.25rem;
  line-height: 1.75rem;
}
h3 {
  font-size: 1.125rem;
  line-height: 1.75rem;
}

div.header {
  color: white;
  background-color: var(--primary-color);
  display: flex;
  justify-content: space-between;
  position: sticky;
  top: 0;
  width: 100%;
  height: 3.8rem;
}
div.header h3 {
  margin-block-start: 0;
  margin-block-end: 0;
  vertical-align: middle;
  align-content: center;
  padding-left: 1rem;
  height: 3.8rem;
}

ul.nav-menue {
  display: flex;
}

ul {
  padding-inline-start: 1rem;
}

div.content {
  margin-bottom: 0;
  height: calc(100lvh - 3.8rem - 1.7rem);
  width: 100lvw;
  display: flex;
  overflow: hidden;
}

div.document {
  padding-left: 2rem;
  padding-right: 2rem;
  overflow-y: auto;
  height: 100%;
  width: calc(100lvw - 38rem);
}

div.sidebar {
  padding-left: 2rem;
  width: 15rem;
  height: 100%;
  overflow-y: visible;
  border-right: 1px solid var(--custom-gray2);
  /* position: fixed;
  left: 0; */
}

div.right-sidebar {
    width: 15rem;
    height: 100%;
    padding-left: 2rem;
    overflow-y: scroll;
    border-left: 1px solid var(--custom-gray2);
    float: right;
    position: fixed;
    right: 0;
}

div.footer {
  color: white;
  background-color: var(--primary-color);
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 1.7rem;
}

pre {
  padding: 1rem;
}

a.headerlink {
  color: transparent;
}